@{
    ViewData["Title"] = "GoToRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Авторизация пользователя</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/MainStyles.css" rel="stylesheet" />
</head>
<body>
    <div class="container reg">
        <div class="row">
            <form class="form-login">
                <div class="form-group">
                    <h3>Авторизация пользователя</h3>
                </div>
                <div class="form-group">
                    <label for="exampleInputLoginOrEmail">Логин или email</label>
                    <input type="text" class="form-control" id="exampleInputLoginOrEmail" aria-describedby="loginHelp" placeholder="Логин или email">
                </div>              
                <div class="form-group">
                    <label for="exampleInputPassword">Пароль</label>
                    <input type="password" class="form-control" id="exampleInputPassword" placeholder="Пароль">
                </div>               
                <button type="submit" class="btn btn-primary">Войти</button>
            </form>
        </div>
    </div>
</body>
</html>