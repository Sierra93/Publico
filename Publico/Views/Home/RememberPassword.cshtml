
@{
	ViewData["Title"] = "RememberPassword";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Восстановление пароля</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<link href="~/css/MainStyles.css" rel="stylesheet" />
	<!-- Подключение фреймворка Vue -->
	<script src="https://unpkg.com/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
	<div id="app" class="container reg">
		<div class="row">
			<form class="form-login">
				<div class="form-group">
					<h3>Восстановление пароля</h3>
				</div>
				<div class="form-group">
					<label for="exampleInputLogin">Логин или email</label>
					<input type="text" class="form-control" id="exampleInputRemember" aria-describedby="RememberHelp" placeholder="Логин или email">
					<input type="text" class="form-control hidden" id="id-input-new-password" placeholder="Новый пароль" />
				</div>
				<input type="button" id="idRemember" class="btn btn-primary btn-login" value="Отправить" v-on:click="onRemember" />
			</form>
		</div>
	</div>
	<script src="~/js/AuthClient.js"></script>
</body>
</html>

