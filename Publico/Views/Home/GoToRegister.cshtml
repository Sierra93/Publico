@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Регистрация нового пользователя</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/css/MainStyles.css" rel="stylesheet" />
	<!-- Подключение фреймворка Vue -->
	<script src="https://unpkg.com/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
	<div id="app" class="container reg">
		<div class="row">
			<form class="form-reg">
				<div class="form-group">
					<h3>Регистрация нового пользователя</h3>
				</div>
				<div class="form-group">
					<label for="exampleInputLogin">Логин</label>
					<input type="text" class="form-control" id="exampleInputLogin" aria-describedby="loginHelp" placeholder="Введите логин" name="login">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail">Email</label>
					<input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Введите email">
					<small id="emailHelp" class="form-text text-muted">Ваш email не будет опубликован.</small>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword">Пароль</label>
					<input type="password" class="form-control" id="exampleInputPassword" placeholder="Пароль">
				</div>
				<div class="form-group">
					<label for="exampleRepeatInputPassword">Подтверждение пароля</label>
					<input type="password" class="form-control" id="exampleRepeatInputPassword" placeholder="Подтверждение пароля">
				</div>
				<input type="button" class="btn btn-primary" value="Регистрация" v-on:click="onRegister" />
			</form>
		</div>
	</div>	
	<script src="~/js/AuthClient.js"></script>
</body>
</html>